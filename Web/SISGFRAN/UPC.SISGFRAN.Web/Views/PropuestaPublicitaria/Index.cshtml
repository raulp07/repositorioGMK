
<div id="app">


    <fieldset>
        <legend>Lista de Locales</legend>
        <div id="googleMap" style="width:100%;height:400px;"></div>
    </fieldset>

    <br />
    <br />
    <fieldset>
        <legend>Opciones</legend>
        <div class="col-sm-12">
            <div class="col-sm-8 ContenedorMedios">
                <h2>Medios Publicitarios</h2>
                <div class="col-sm-12" v-for="medios in ListaMedios">
                    <label class="col-lg-3">{{medios.nombreMedioComunicacion}}</label>
                    <input v-bind:id="'opc_' + medios.codMedioComunicacion" type="range" name="edad" min="0" max="100" step="1" v-bind:data-nombre="medios.nombreMedioComunicacion" v-bind:data-costo="medios.costoUnitarioMedioComunicacion" v-bind:value="medios.promedio" v-on:change="VisualizarValor" class="col-lg-7">
                    <span v-bind:id="'span_' + medios.codMedioComunicacion" class="col-lg-2">{{medios.promedio}}%</span>
                </div>
            </div>
            <div class="col-sm-4">
                <div>
                    <input type="button" v-on:click="CargarMapa" value="Generar" class="btn" />
                </div>
                <div>
                    <input type="button" v-on:click="RegistrarPropuesta" value="Generar Propuesta" class="btn" />
                </div>
            </div>
        </div>
    </fieldset>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Registro Propuesta</h4>
                </div>
                <div class="modal-body col-sm-12">
                    <div class="col-sm-8 col-lg-offset-2">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <td>Medio</td>
                                    <td>Procentaje</td>
                                    <td>Local</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="ListaMedio in ListaMediosSeleccionados">
                                    <td>{{ListaMedio.nombreMedio}}</td>
                                    <td>{{ListaMedio.porcentaje}}%</td>
                                    <td>{{ListaMedio.locales}}</td>
                                    <td class="hide">asdas</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-sm-8 col-lg-offset-2 form-group">
                        @*<div class="summernote">sfdfsdf</div>*@
                        <label>Observación :</label>
                        <textarea id="observacion" class="form-control" rows="3" placeholder="Descripción de estrategia" style="min-width: 100%"></textarea>
                    </div>
                    <div class="col-sm-8 col-lg-offset-2">
                        <div class="col-sm-6 form-group">
                            <label>Presupuesto :</label>
                            <input class="form-control text-center" type="text" id="Presupuesto" />
                        </div>
                        <div class="col-sm-6">
                            <div class="col-sm-12 form-group">
                                <label>Fecha :</label>
                                <div class='input-group date' id='datetimepicker1'>
                                    <input type='text' class="form-control" id="lblFecha" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8 col-lg-offset-2">
                        <div class="col-sm-12 form-group">
                            <div class="col-sm-6">
                                <input type="button" class="btn col-sm-offset-2" value="Grabar" v-on:click="RegistroPropuesta" />
                            </div>
                            
                            <div class="col-sm-6">
                                <input type="button" class="btn col-sm-offset-2" data-dismiss="modal"  value="cancelar" />
                            </div>                            
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Scripts/JsPropuestaPublicitaria/PropuestaPublicitariaJs.js"></script>