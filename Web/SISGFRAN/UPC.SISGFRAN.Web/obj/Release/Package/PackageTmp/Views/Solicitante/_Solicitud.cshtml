@model UPC.SISGFRAN.EL.Inherited.SolicitudEL

<div>
    @{
        var grid = new WebGrid(
                    canPage: true,
                    rowsPerPage: Model.ListaSolicitudes.PageSize,
                    canSort: false,
                    ajaxUpdateContainerId: "gridSolicitud");
        grid.Bind(Model.ListaSolicitudes.Content, rowCount: Model.ListaSolicitudes.TotalRecords, autoSortAndPage: false);
        grid.Pager(WebGridPagerModes.All,
                    firstText: "<<", lastText: ">>",
                    previousText: "<",
                    nextText: ">",
                    numericLinksCount: 15);
                    @grid.GetHtml(htmlAttributes: new { id = "gridSolicitud1" },
            tableStyle: "webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            fillEmptyRows: false,
            mode: WebGridPagerModes.All,
            columns: grid.Columns(
                 grid.Column(format: @<text><input id="NumeroDocumento" class="chkRbSol" name="NumeroDocumento" type="radio" value="@item.NumeroDocumento" onclick="javascript: SolicitudSelected(this)" /></text>),
                 grid.Column("Solicitante.NombreCompleto", "Solicitante", format: @<text><input type="hidden" id="id_@item.NumeroDocumento" value="@item.Solicitante.Id" /><span class="nom_@item.Id" id="nom_@item.NumeroDocumento">@item.Solicitante.NombreCompleto</span></text>),
                 grid.Column("Solicitante.TipoDocumento.Nombre", "Tipo Documento"),
                 grid.Column("NumeroDocumento", "Nro. Documento", format: @<text><span id="num_@item.NumeroDocumento">@item.NumeroDocumento</span></text>),
                 grid.Column("Solicitante.TituloObtenido", "Grado de Instrucción", format: @<text><span id="grad_@item.NumeroDocumento">@item.Solicitante.TituloObtenido</span></text>),
                 grid.Column("Solicitante.Sexo.Nombre", "Sexo", format: @<text><span id="sexo_@item.NumeroDocumento">@item.Solicitante.Sexo.Nombre</span></text>),
                 grid.Column("Solicitante.MontoIngresosMes", "Salario", format: @<text><span id="ing_@item.NumeroDocumento">@item.Solicitante.MontoIngresosMes</span></text>),
                 grid.Column("Solicitante.MontoGastosMes", "Gastos", format: @<text><span id="gast_@item.NumeroDocumento">@item.Solicitante.MontoGastosMes</span></text>),
                 grid.Column("Solicitante.Cargo", "Cargo", format: @<text><span id="cargo_@item.NumeroDocumento">@item.Solicitante.Cargo</span></text>),
                 grid.Column("Solicitante.FechaNacimiento", "Fecha Nacimiento", format: @<text><span id="fecha_@item.NumeroDocumento">@String.Format("{0:dd-MM-yyyy}", @item.Solicitante.FechaNacimiento)</span></text>, style: "col-md-1")
                
 ));
}

</div>