                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-sm-12">
                            <label>Reporte</label>
                        </div>
                        <div class="col-sm-12">
                            <div class="large-12" id="columnchart_material1" style="height: 500px;"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>*@

        </div>
    </div>
</div>
<div id="divpreview" class="col-sm-12">
    <div class="large-12" id="columnchart_material1" style="height: 600px; display: none"></div>
</div>

