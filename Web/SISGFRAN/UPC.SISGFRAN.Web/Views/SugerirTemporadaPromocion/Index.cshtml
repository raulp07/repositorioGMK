<div id="app">

    <div>
        <center><h2>Sugerir Temporada para promocionar producto</h2></center>

    </div>
    <div>
        <div class="col-sm-5 col-sm-offset-3">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>Combo</td>
                        <td>Seleccionar</td>
                    </tr>
                </thead>
                <tbody v-for="combo in combos">
                    <tr>
                        <td class="col-xs-10">{{ combo.nombre }}</td>
                        <td class="col-xs-2"><input v-bind:id="combo.codcombo" type="checkbox" /></td>
                    </tr>
                </tbody>
            </table>

        </div>
        <div class="col-sm-5 col-sm-offset-3">
            
            <div class="col-sm-4">
                <div class="col-sm-12">
                    <label class="col-sm-6">Periodo Inicio</label>
                    <input class="col-sm-6" type="number" step="1" min="0" max="4" />
                </div>
                <div class="col-sm-12">
                    <label class="col-sm-6">Periodo Fin</label>
                    <input class="col-sm-6" type="number" step="1" min="0" max="4" />
                </div>
            </div>
            <div class="col-sm-7">
                <div class="col-sm-12">
                    <label class="col-sm-8">Año Inicio</label>
                    <input class="col-sm-4" type="number" step="1" min="2000" max="2018" />
                </div>
                <div class="col-sm-12">
                    <label class="col-sm-8">Año Fin</label>
                    <input class="col-sm-4" type="number" step="1" min="2000" max="2018" />
                </div>
            </div>
            <div class="col-sm-1">
                <div class="col-sm-4 col-sm-offset-4">
                    <br />
                    <input type="button" class="btn btn-default" v-on:click="GenerarReporte" value="Filtrar" />
                </div>
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-3">
            <div class="col-sm-6">
                <div class="large-12" id="columnchart_material" style="height: 300px;"></div>
            </div>
            <div class="col-sm-6">
                <br />
                <textarea rows="10" style="min-width: 100%;"></textarea>
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-3">
            <label class="col-sm-12">Sugerencia</label>
            <textarea style="min-width: 100%;" class="col-sm-12" id="txtsugerencia" rows="10"></textarea>
        </div>
        <div class="col-sm-5 col-sm-offset-3">
            <div class="col-sm-6">
                <label class="col-sm-12">Sugerencia</label>
                <textarea style="min-width: 100%;"  class="col-sm-12" rows="10"></textarea>
            </div>
            <div class="col-sm-6">
                <div class="col-sm-12">
                    <input type="button" class="btn btn-default center-block" v-on:click="ImprimirPantalla" data-toggle="modal" data-target="#myModal" value="Previsualizar" />
                    <br />
                </div>
                <div class="col-sm-12">
                    <input type="button" class="btn btn-default center-block" value="Guardar propuesta" />
                    <br />
                </div>
                <div class="col-sm-12">
                    <input type="button" class="btn btn-default center-block" value="Salir" />
                    <br />
                </div>
            </div>
        </div>
    </div>

</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">

        
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <div class="large-12" id="columnchart_material1" style="height: 600px;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/JsSugerirTemporadaPromocion/SugerirTemporadaPromocionJs.js"></script>