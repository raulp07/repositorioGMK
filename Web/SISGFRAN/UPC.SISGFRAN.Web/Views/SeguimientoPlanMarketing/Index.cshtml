<div id="app">
    <div class="row" id="Pag1">
        <div class="row">
            <center><h1> Plan de Marketing</h1></center>
        </div>
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <table class="table ">
                    <thead>
                        <tr>
                            <td>Plan de Marketing</td>
                            <td>Seleccionar</td>
                        </tr>
                    </thead>
                    <tbody id="tbodyid">
                        <tr v-for="lista in listaplanmarketing">
                            <td>{{ lista.nombrePlanMkt }}</td>
                            <td><input type="radio" name="PMKT" v-bind:data-pmkt="lista.codPlanMkt" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="col-sm-6">
                    <input type="button" value="Dar Seguimiento" class="btn btn-default" v-on:click="DarSeguimiento" />
                </div>
                <div class="col-sm-6">
                    <a href="/Home/Index" class="btn btn-default">Salir</a>
                </div>
            </div>
        </div>
    </div>
    <div id="Pag2" style="display:none">
        <div class="row">
            <center><h1><label id="titulo"></label> </h1></center>
        </div>

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div id="tabmaster" class="container">
                    <ul class="nav nav-tabs">
                        <li ><a data-toggle="tab" href="#Objetivos">Objetivos</a></li>
                        <li class ="active"><a data-toggle="tab" href="#Estrategia">Estrategia</a></li>
                        <li><a data-toggle="tab" href="#Acciones">Acciones</a></li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div id="Objetivos" class="tab-pane fade">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <td>Nombre Objetivo</td>
                                    <td>Estado</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody v-for="lista in ListaObjetivos">
                                <tr>
                                    <td>{{ lista.nombreObjetivo }}</td>
                                    <td>{{ lista.estadoObjetivo }}</td>
                                    <td><input type="button" class="btn btn-success" v-on:click="CargaEstrategia(lista.codObjetivo)" value="Ver" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="Estrategia" class="tab-pane fade">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <td>Nombre Estrategia</td>
                                    <td>Estado</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody v-for="lista in ListaEstrategia">
                                <tr>
                                    <td>{{ lista.descripcionEstrategia }}</td>
                                    <td>{{ lista.estadoEstrategia }}</td>
                                    <td><input type="button" class="btn btn-success" v-on:click="CargaAccion(lista.codEstrategia)" value="Ver" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="Acciones" class="tab-pane fade">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <td>Nombre Acción</td>
                                    <td>Estado</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody v-for="lista in ListaAccion">
                                <tr>
                                    <td>{{ lista.nombreAccion }}</td>
                                    <td>{{ lista.estadoAccion }}</td>
                                    <td><input type="button" class="btn btn-success" v-on:click="CargaEstrategia(lista.codAccion)" value="Ver" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="col-sm-6">
                    <input type="button" value="Regresar" class="btn btn-default" v-on:click="Retr" />
                </div>
                <div class="col-sm-6">
                    <input type="button" value="Guardar" class="btn btn-default" v-on:click="SaveSegui" />
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/JsSeguimientoPlanMarketing/SeguimientoPlanMarketingJs.js"></script>