                            <td><input type="radio" name="PMKT" v-bind:data-pmkt="lista.codPlanMkt" /></td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-success" role="progressbar" v-bind:aria-valuenow="lista.porcentajeavance" aria-valuemin="0" aria-valuemax="100" v-bind:style="{width:lista.porcentajeavance+'%'}">
                                        {{lista.porcentajeavance}}% Completado
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

