                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtobservacion">Observaciones</label>
                                        <textarea id="txtobservacion" class="form-control" rows="5"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtcostoAccion">Costo</label>
                                        <input type="text" id="txtcostoAccion" class="form-control" onkeypress="return soloNumeros(event)" />
